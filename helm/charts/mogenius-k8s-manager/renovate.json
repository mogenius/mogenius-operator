{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":enableRenovate",
        ":enableVulnerabilityAlerts",
        ":dependencyDashboard",
        "group:monorepos",
        "group:recommended",
        "workarounds:all"
    ],
    "semanticCommits": "enabled",
    "separateMajorMinor": true,
    "separateMinorPatch": true,
    "separateMultipleMajor": true,
    "lockFileMaintenance": {
        "enabled": true
    },
    "packageRules": [
        {
          "matchPackageNames": ["ghcr.io/mogenius/mogenius-k8s-manager"],
          "enabled": false
        }
      ],
    "reviewers": [
        "ruedigerp",
        "lukashankeln",
        "beneiltis"
    ]
}
