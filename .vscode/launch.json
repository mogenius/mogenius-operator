{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "LOGS",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/src/main.go",
      "args": ["logs", "--namespace=default", "--pod=blaa", "--container=my-container"],
      "asRoot": false,
      "console": "integratedTerminal"
    },
    {
      "name": "CLUSTER",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/src/main.go",
      "args": ["cluster"],
      "asRoot": false,
      "console": "integratedTerminal",
      "buildFlags": [
        "-ldflags",
        "-X mogenius-operator/src/utils.DevBuild=yes"
      ]
    },
    {
      "name": "METRICS",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "envFile": "${workspaceFolder}/.env",
      "program": "${workspaceFolder}/src/main.go",
      "args": ["nodemetrics"],
      "asRoot": false,
      "console": "integratedTerminal",
      "buildFlags": [
        "-ldflags",
        "-X mogenius-operator/src/utils.DevBuild=yes"
      ]
    },
    {
      "name": "TESTS",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/src/kubernetes/resource-templates_test.go",
      "args": ["-test.run", "^TestResourceTemplates$"],
      "asRoot": false,
      "console": "integratedTerminal"
    }
  ]
}
